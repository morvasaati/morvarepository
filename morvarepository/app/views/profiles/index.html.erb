  <h1 style="margin-right:5%">لیست پروفایل ها</h1>

<div class="col-xs-12">
                <table class="table table-striped table-hover">
                <thead>
                <tr>
                  <th>
                     نام شرکت
                  </th>
                  <th>
                     سابقه کاری
                  </th>
                  <th >
                     شماره ثبت
                  </th>
                  <th >
                     شماره تلفن
                  </th>
                  <th >
                     شماره فکس
                  </th>
                  <th >
                     عکس
                  </th>
                 
                </tr>
                </thead>

                <tbody>
                <tr>
              <% @profiles.each do |profile| %>
                <tr>
                <th ><%= profile.company_name  %></td>
                <th ><%= profile.work_experience  %></td>
                <th ><%= profile.register_number%></td>
                <th ><%= profile.tel%></td>
                <th ><%= profile.fax %></td>
                <th ><%= image_tag profile.avatar.url , style:"width:16%;height:26%;"%></td>
                <th ><%= link_to 'جزئيات بیشتر', profile , class:"btn btn-sh green hidden-print margin-bottom-5"%></td>
                <th ><%= link_to 'ویرایش', edit_profile_path(profile) , class:"btn btn-sh blue hidden-print margin-bottom-5" %></td>
                <th ><%= link_to 'حذف', profile, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-sh red hidden-print margin-bottom-5" %></td>
      </tr>
    <% end %>
                </tr>
                </tbody>
                </table>
              </div>


